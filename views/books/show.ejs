<% include ../partials/header %>

<section id="showDetail">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <div class="ui card mx-auto">
          <div class="image">
            <img src="<%= book.image_url %>" class="coverImage ui image fluid">
          </div>
          <div class="content">
            <a href="/books/<%= book.id %>" class="header"><%= book.title %></a>
            <div class="ui relaxed divided list">
              <div class="item">
                <div class="content">
                  <p>Author: <%= book.author %></p>
                </div>
              </div>
              <div class="item">
                <div class="content">
                  <p>Publisher: <%= book.publisher %></p>
                </div>
              </div>
              <div class="item">
                <div class="content">
                  <p>ISBN: <%= book.isbn %></p>
                </div>
              </div>
              <div class="item">
                <div class="content">
                Rating:
                <div class="ui star rating" data-rating="<%= book.rating %>"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="extra mx-auto">
          <div class="ui buttons">
            <a href="/books/edit/<%= book.id %>" class="ui yellow button">Edit</a>
            <div class="or"></div>
            <form action="/books/<%= book.id %>?_method=DELETE" method="POST">
              <input type="Submit" class="ui red button" value="Delete">
            </form> 
          </div>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="ui fluid card h-100">
          <div class="content">
            <div class="header">Description</div>
            <div class="ui divided relaxed list">
              <div class="item">
                <div class="content">
                  <p>
                    <%= book.description %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% include ../partials/footer %>
